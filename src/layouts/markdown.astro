---
import Layout from '~/layouts/page.astro';

import type { MetaData } from '~/types';

export interface Props {
	frontmatter: {
		title?: string
	}
}

const { frontmatter } = Astro.props;

const metadata: MetaData = {
	title: frontmatter?.title,
};
---

<Layout metadata={metadata}>

	<section class="mx-auto px-6 mt-6 py-20 text-justify prose prose-xl dark:prose-invert dark:prose-headings:text-slate-300 prose-headings:font-heading prose-headings:text-primary prose-h2:font-bold">

		<h1>{frontmatter.title}</h1>
		
		<div
			class="text-justify mx-auto prose prose-xl max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-primary dark:prose-a:primary prose-img:rounded-md prose-img:shadow-lg mt-8"
			>
			<slot/>
		</div>

	</section>

</Layout>