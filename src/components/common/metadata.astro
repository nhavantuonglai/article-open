---
import merge from 'lodash.merge';
import { AstroSeo } from '@astrolib/seo';
import type { Props as AstroSeoProps } from '@astrolib/seo';

import { SITE, METADATA, I18N } from 'nhavantuonglai:config';
import type { MetaData } from '~/types';
import { getCanonical } from '~/utils/permalinks';
import { adaptOpenGraphImages } from '~/utils/images';

export interface Props extends MetaData {
	dontUseTitleTemplate?: boolean;
}

const {
	title,
	ignoreTitleTemplate = false,
	canonical = String(getCanonical(String(Astro.url.pathname))),
	robots = {},
	description,
	openGraph = {},
	twitter = {},
} = Astro.props;

const defaultSeoProps: AstroSeoProps = {
	title: METADATA?.title?.default,
	titleTemplate: METADATA?.title?.template,
	noindex: METADATA?.robots?.index === false,
	nofollow: METADATA?.robots?.follow === false,
	description: METADATA?.description,
	openGraph: {
		url: canonical,
		site_name: SITE?.name,
		title: title || METADATA?.title?.default,
		description: description || METADATA?.description,
		type: 'website',
		locale: METADATA?.openGraph?.locale || 'vi_VN',
		images: [{
			url: METADATA?.openGraph?.image?.url,
			width: METADATA?.openGraph?.image?.width,
			height: METADATA?.openGraph?.image?.height,
			alt: METADATA?.openGraph?.image?.alt,
		}],
	},
	twitter: {
		card: METADATA?.twitter?.card,
		site: METADATA?.twitter?.site,
		creator: METADATA?.twitter?.creator,
		title: title || METADATA?.title?.default,
		description: METADATA?.twitter?.description,
		image: METADATA?.twitter?.image,
	},
};

const seoProps: AstroSeoProps = merge({}, defaultSeoProps, {
	title,
	titleTemplate: ignoreTitleTemplate ? '%s' : undefined,
	canonical,
	noindex: robots?.index === false,
	nofollow: robots?.follow === false,
	description,
	openGraph: { 
		url: canonical,
		title: title || METADATA?.title?.default,
		description: description || METADATA?.description,
		...openGraph 
	},
	twitter: METADATA?.twitter,
});
---

<AstroSeo

	{...

		{...
		seoProps,
		openGraph: await adaptOpenGraphImages(seoProps.openGraph, Astro.site)
		}
	}

	<meta property="twitter:image" content="https://banmaixanh.org/image/cover/001-053.jpg">
	<meta property="twitter:card" content="summary_large_image">
	<meta property="twitter:title" content="Văn hay trong hiện tại, chữ tốt ở tương lai">
	<meta property="twitter:description" content="Viết là nuôi dưỡng niềm đam mê, chữ để ươm mầm điều yêu thích. Học và hoàn thiện kỹ năng mỗi ngày không mong gì hơn đó là điều duy nhất người ta nhớ để nhắc về.
	">

/>