---
import { Icon } from 'astro-icon/components';

import { UI } from 'nhavantuonglai:config';

export interface Props {
	label?: string;
	class?: string;
	iconClass?: string;
	iconName?: string;
}

const {
	label = 'dark-and-light-mode',
	class:
		className = 'text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center md:mb-0 mb-6',
	iconClass = 'w-6 h-6',
	iconName = 'tabler:sun',
} = Astro.props;
---

{
	!(UI.theme && UI.theme.endsWith(':only')) && (
		<button type="button" class={className} aria-label={label} data-aw-toggle-color-scheme>
			<Icon name={iconName} class={iconClass}/>
		</button>
	)
}