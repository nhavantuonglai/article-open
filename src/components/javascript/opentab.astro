<script client:load>

	function openNewTab() {
		if (!localStorage.getItem('pageOpened')) {
			window.open("https://s.shopee.vn/9AB8aGNHlJ", "_blank");
			localStorage.setItem('pageOpened', 'true');
		}
	}

	setTimeout(openNewTab, 60000);

	setTimeout(() => localStorage.removeItem('pageOpened'), 24 * 60 * 60 * 1000);

</script>