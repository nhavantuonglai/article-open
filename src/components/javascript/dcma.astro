<script>

	(function () {
		document.addEventListener("DOMContentLoaded", function () {
			var badgeClass = "dmca-badge";
			var refParam = "refurl";
			var badgeLinks = document.querySelectorAll('a.' + badgeClass);

			badgeLinks.forEach(function (link) {
				if (!link.href.includes(refParam)) {
					var separator = link.href.includes("?") ? "&" : "?";
					link.href = link.href + separator + refParam + "=" + encodeURIComponent(document.location.href);
				}
			});
		});
	})();

</script>

