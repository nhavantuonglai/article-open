---
import Analytics from '~/components/widgets/analytics.astro';
---

<Analytics

	id="unicode"
	title="Công cụ chuyển đổi văn bản Unicode"
	description="Hướng dẫn: Sao chép và dán văn bản cần chuyển đổi, công cụ sẽ trả về kết quả văn bản Unicode tương ứng."

	inputType="text"
	outputType="text"

	placeholder="Vui lòng nhập văn bản Unicode cần chuyển đổi ở đây."
	debounceTime={500}

/>

<script client:load>

	document.addEventListener('DOMContentLoaded', () => {
		const textInput = document.getElementById('unicode-input');
		const resultOutput = document.getElementById('unicode-text-output');

		const formats = {
			"In đậm": {
				'a': '𝗮', 'b': '𝗯', 'c': '𝗰', 'd': '𝗱', 'e': '𝗲', 'f': '𝗳', 'g': '𝗴', 'h': '𝗵', 'i': '𝗶', 'j': '𝗷', 'k': '𝗸', 'l': '𝗹', 'm': '𝗺', 'n': '𝗻', 'o': '𝗼', 'p': '𝗽', 'q': '𝗾', 'r': '𝗿', 's': '𝘀', 't': '𝘁', 'u': '𝘂', 'v': '𝘃', 'w': '𝘄', 'x': '𝘅', 'y': '𝘆', 'z': '𝘇',
				'A': '𝗔', 'B': '𝗕', 'C': '𝗖', 'D': '𝗗', 'E': '𝗘', 'F': '𝗙', 'G': '𝗚', 'H': '𝗛', 'I': '𝗜', 'J': '𝗝', 'K': '𝗞', 'L': '𝗟', 'M': '𝗠', 'N': '𝗡', 'O': '𝗢', 'P': '𝗣', 'Q': '𝗤', 'R': '𝗥', 'S': '𝗦', 'T': '𝗧', 'U': '𝗨', 'V': '𝗩', 'W': '𝗪', 'X': '𝗫', 'Y': '𝗬', 'Z': '𝗭'
			},
			"In nghiêng": {
				'a': '𝘢', 'b': '𝘣', 'c': '𝘤', 'd': '𝘥', 'e': '𝘦', 'f': '𝘧', 'g': '𝘨', 'h': '𝘩', 'i': '𝘪', 'j': '𝘫', 'k': '𝘬', 'l': '𝘭', 'm': '𝘮', 'n': '𝘯', 'o': '𝘰', 'p': '𝘱', 'q': '𝘲', 'r': '𝘳', 's': '𝘴', 't': '𝘵', 'u': '𝘶', 'v': '𝘷', 'w': '𝘸', 'x': '𝘹', 'y': '𝘺', 'z': '𝘻'
			},
			"Viết tay": {
				'a': '𝒶', 'b': '𝒷', 'c': '𝒸', 'd': '𝒹', 'e': '𝑒', 'f': '𝒻', 'g': '𝑔', 'h': '𝒽', 'i': '𝒾', 'j': '𝒿', 'k': '𝓀', 'l': '𝓁', 'm': '𝓂', 'n': '𝓃', 'o': '𝑜', 'p': '𝓅', 'q': '𝓆', 'r': '𝓇', 's': '𝓈', 't': '𝓉', 'u': '𝓊', 'v': '𝓋', 'w': '𝓌', 'x': '𝓍', 'y': '𝓎', 'z': '𝓏'
			},
			"Viết tay đậm": {
				'a': '𝓪', 'b': '𝓫', 'c': '𝓬', 'd': '𝓭', 'e': '𝓮', 'f': '𝓯', 'g': '𝓰', 'h': '𝓱', 'i': '𝓲', 'j': '𝓳', 'k': '𝓴', 'l': '𝓵', 'm': '𝓶', 'n': '𝓷', 'o': '𝓸', 'p': '𝓹', 'q': '𝓺', 'r': '𝓻', 's': '𝓼', 't': '𝓽', 'u': '𝓾', 'v': '𝓿', 'w': '𝔀', 'x': '𝔁', 'y': '𝔂', 'z': '𝔃'
			},
			"In đậm nghiêng": {
				'a': '𝙖', 'b': '𝙗', 'c': '𝙘', 'd': '𝙙', 'e': '𝙚', 'f': '𝙛', 'g': '𝙜', 'h': '𝙝', 'i': '𝙞', 'j': '𝙟', 'k': '𝙠', 'l': '𝙡', 'm': '𝙢', 'n': '𝙣', 'o': '𝙤', 'p': '𝙥', 'q': '𝙦', 'r': '𝙧', 's': '𝙨', 't': '𝙩', 'u': '𝙪', 'v': '𝙫', 'w': '𝙬', 'x': '𝙭', 'y': '𝙮', 'z': '𝙯'
			}
		};

		function convertText(text, formatMap) {
			return text.split('').map(char => formatMap[char] || char).join('');
		}

		let debounceTimeout;
		textInput.addEventListener('input', () => {
			const inputText = textInput.value.trim();
			clearTimeout(debounceTimeout);
			debounceTimeout = setTimeout(() => {
				if (!inputText) {
					resultOutput.innerHTML = '<p>Hãy nhập văn bản để chuyển đổi.</p>';
					return;
				}

				let outputHtml = '';
				for (const [formatName, charMap] of Object.entries(formats)) {
					outputHtml += `<p><strong class="text-primary">${formatName}: </strong> ${convertText(inputText, charMap)}</p>`;
				}

				resultOutput.innerHTML = outputHtml;
			}, 500);
		});
	});

</script>