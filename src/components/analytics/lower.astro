---
import Analytics from '~/components/widgets/analytics.astro';
---

<section class="relative md:-mt-[76px] not-prose">

	<Analytics

		id="lowercase"
		title="Chuyển chữ hoa thành chữ thường"
		description="Nhập văn bản để chuyển đổi thành chữ thường"

		inputType="text"
		outputType="text"

		placeholder="Nhập văn bản cần chuyển đổi…"
		debounceTime={500}
	/>

</section>

<script client:load>

	document.addEventListener('DOMContentLoaded', () => {
		const textInput = document.getElementById('lowercase-input');
		const resultOutput = document.getElementById('lowercase-text-output');
		let debounceTimeout;

		textInput.addEventListener('input', () => {
			const inputText = textInput.value.trim();
			clearTimeout(debounceTimeout);

			debounceTimeout = setTimeout(() => {
				if (!inputText) {
					resultOutput.textContent = 'Hãy nhập văn bản để chuyển đổi.';
					return;
				}

				resultOutput.textContent = inputText.toLowerCase();
			}, 500);
		});
	});

</script>