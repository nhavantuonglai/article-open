---
import Analytics from '~/components/widgets/analytics.astro';

const title = "Công cụ chuyển văn bản thành kebabcase trực tuyến";
const subtitle = "Hướng dẫn: Sao chép nội dung, văn bản cần chuyển kebabcase vào khung nhập liệu, công cụ sẽ phân tích và trả về nội dung kebacase nhanh chóng và chính xác.";
const placeholder = "Nhập văn bản tại đây.";

---

<Analytics

	title={title}
	subtitle={subtitle}

	id="kebabcase"
	inputType="text"
	outputType="text"
	outputFormat="kebabcase"

	placeholder={placeholder}
	image="https://images.pexels.com/photos/32805778/pexels-photo-32805778.jpeg"

/>

<script client:load>

	document.addEventListener('DOMContentLoaded', () => {
		const safeId = 'kebabcase',
					inputElement = document.getElementById(`${safeId}-input`),
					outputElement = document.getElementById(`${safeId}-text-output`);

		if (!inputElement || !outputElement) return;

		inputElement.addEventListener('input', () => {
			const input = inputElement.value.trim();

			if (!input) {
				outputElement.textContent = 'Vui lòng nhập văn bản.';
				return;
			}

			outputElement.textContent = input
				.toLowerCase()
				.replace(/\s+/g, '-')
				.replace(/[^a-z0-9-]/g, '');
		});
	});

</script>