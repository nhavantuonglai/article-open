---
import Analytics from '~/components/widgets/analytics.astro';
---
<section class="relative md:-mt-[76px] not-prose">

	<Analytics

		id="text-counter"
		title="Đếm ký tự và thống kê văn bản"
		description="Nhập văn bản để đếm số ký tự, số từ và số đoạn văn"

		inputType="text"
		outputType="text"

		placeholder="Nhập văn bản cần phân tích…"
		debounceTime={500}

	/>

</section>

<script client:load>

	document.addEventListener('DOMContentLoaded', () => {
		const textInput = document.getElementById('text-counter-input');
		const resultOutput = document.getElementById('text-counter-text-output');
		let debounceTimeout;

		function countText(text) {
			if (!text.trim()) {
				return 'Hãy nhập văn bản để phân tích.';
			}

			const charCount = text.length;
			
			const wordCount = text.trim().split(/\s+/).length;
			
			const paragraphCount = text.trim()
				.split(/[.!?]+/)
				.filter(para => para.trim().length > 0)
				.length;

			return `Số ký tự: ${charCount}
Số từ: ${wordCount}
Số đoạn văn: ${paragraphCount}`;
		}

		textInput.addEventListener('input', () => {
			const inputText = textInput.value;
			clearTimeout(debounceTimeout);
			
			debounceTimeout = setTimeout(() => {
				resultOutput.textContent = countText(inputText);
			}, 500);
		});
	});
</script>