---
import { Icon } from 'astro-icon/components';
import { getPermalink } from '~/utils/permalinks';
import Button from '~/components/ui/button.astro';

export interface Props {
	prevUrl?: string;
	nextUrl?: string;
	prevText?: string;
	nextText?: string;
}

const { prevUrl, nextUrl, prevText = 'Bài mới hơn', nextText = 'Bài cũ hơn' } = Astro.props;
---

{

	(prevUrl || nextUrl) && (

		<div class="container flex">

			<div class="flex flex-row mx-auto justify-between">

				{prevUrl && (
					<Button
						variant="primary"
						class="md:px-3 px-3 mr-2"
						href={getPermalink(prevUrl)}
					>
						<Icon name="tabler:chevron-left" class="w-6 h-6" />
						<p class="ml-2">{prevText}</p>
					</Button>
				)}

				{nextUrl && (
					<Button
						variant="primary"
						class="md:px-3 px-3"
						href={getPermalink(nextUrl)}
					>
						<span class="mr-2">{nextText}</span>
						<Icon name="tabler:chevron-right" class="w-6 h-6" />
					</Button>
				)}

			</div>

		</div>

	)

}