---
import { UI } from 'nhavantuonglai:config';

const html = `

	<style>

		:root {
			--aw-color-primary: ${UI.tokens.default.colors.primary};
			--aw-color-secondary: ${UI.tokens.default.colors.secondary};
			--aw-color-accent: ${UI.tokens.default.colors.accent};
			--aw-color-text-heading: ${UI.tokens.default.colors.heading};
			--aw-color-text-default: ${UI.tokens.default.colors.default};
			--aw-color-text-muted: ${UI.tokens.default.colors.muted};
			--aw-color-bg-page: ${UI.tokens.default.colors.bgPage};
			--aw-color-bg-page-dark: ${UI.tokens.dark.colors.bgPage};
		}

		@keyframes pulse {
			0%, 100% { transform: scale(1); opacity: 0.08; }
			50% { transform: scale(1.05); opacity: 0.1; }
		}

		.gradient-shape {
			position: fixed;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			width: 70%;
			height: 70%;
			border-radius: 50%;
			background: radial-gradient(
				circle,
				var(--aw-color-accent) 0%,
				var(--aw-color-primary) 40%,
				transparent 70%
			);
			filter: blur(120px);
			opacity: 0.08;
			z-index: -1;
			animation: pulse 15s ease-in-out infinite;
		}

		.galaxy-arm {
			position: fixed;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%) rotate(45deg);
			width: 90%;
			height: 30%;
			background: radial-gradient(
				ellipse at center,
				var(--aw-color-primary) 0%,
				var(--aw-color-accent) 50%,
				transparent 90%
			);
			filter: blur(100px);
			opacity: 0.05;
			z-index: -1;
			border-radius: 100% / 50%;
		}

		.dark {
			--aw-color-primary: ${UI.tokens.dark.colors.primary};
			--aw-color-secondary: ${UI.tokens.dark.colors.secondary};
			--aw-color-accent: ${UI.tokens.dark.colors.accent};
			--aw-color-text-heading: ${UI.tokens.dark.colors.heading};
			--aw-color-text-default: ${UI.tokens.dark.colors.default};
			--aw-color-text-muted: ${UI.tokens.dark.colors.muted};
			--aw-color-bg-page: ${UI.tokens.dark.colors.bgPage};
		}

		.dark .gradient-shape,
		.dark .galaxy-arm {
			opacity: 0.1;
		}

	</style>

`;
---

<Fragment set:html={html} />

<div class="gradient-shape"></div>

<div class="galaxy-arm"></div>