---
import '../styles/global.css';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';

const { title } = Astro.props;
---

<html lang="vi">

	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playwrite+CO+Guides&display=swap" rel="stylesheet">

	</head>

	<body>

		<Header/>

		<main>
			<slot/>
		</main>

		<Footer/>

	</body>

</html>